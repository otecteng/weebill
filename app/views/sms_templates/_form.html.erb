

<div class="widget-box">
              <div class="widget-title">
                <span class="icon">
                  <i class="glyphicon glyphicon-align-justify"></i>                 
                </span>
                <h5><%= params[:action]=="edit" ? "编辑" : "新建" %>短信模板</h5>
              </div>
              <div class="widget-content nopadding">
                <%= form_for @sms_template,:html=>{:class=>"form-horizontal"} do |f| %>
                  <div class="form-group">
                    <label class="control-label">类别</label>
                    <div class="controls">
                      <%= f.text_field :sms_type, :class => "form-control input-small" %>
                   </div>
                  </div>
                  <div class="form-group">
                    <label class="control-label">内容</label>
                    <div class="controls">
                      <%= f.text_area :content , :class => "form-control",:cols => "30", :rows => "10" %>
                   </div>
                  </div>
                  
                  <div class="form-actions">
                    <%= submit_tag '保存',:class => "btn btn-primary btn-small" %>
                    or <a class="text-danger" href="/sms_templates">取消</a>
                  </div>
                  <% end%>
              </div>
            </div>

